<div class="navigation-bar">
  <div class="container">
    <%= link_to root_path, class: 'brand-link' do %>
      <div class="brand">
        <div class="logo">
          <span>Freshest</span>
        </div>
        <div class='slogan'>
          Short-lived fresh news from the modern Web
        </div>
      </div>
    <% end %>
    <div class="bar-right pull-right">
      <div class="button margin-right-0">
        <%= link_to(user_signed_in? ? "#" : user_omniauth_authorize_path(:twitter)) do %>
          <span>
            Suggest an Influencer
          </span>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              <div class="post-avatar">
                <%= image_tag current_user.picture, { class: "img total-width border-radius-1" } %>
              </div>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %></li>
            </ul>
          </li>
        </ul>
      <% end %>
      <div class="nav-link">
      </div>
      <%= react_component("ConnectModal", {
        href: user_omniauth_authorize_path(:twitter),
        influencer_avatars: @last_posts[0..4].map {|post| post[:user_image]}
        }) %>
    </div>
  </div>
</div>