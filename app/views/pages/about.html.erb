<%= content_for :title do %>
  Freshest - Short-lived news from the modern Web
<% end %>

<% if user_signed_in? %>
  <%= react_component("ModalSource", {
    currentUser: current_user,
    suggestionPath: suggest_path
    }) %>
<% else %>
  <%= react_component("ModalConnect", {
   last_sources_images: @sources[0..4].map {|source| source.avatar_url},
   oauthPath: user_omniauth_authorize_path(:twitter)
  }) %>
<% end %>

